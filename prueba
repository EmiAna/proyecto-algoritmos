IPC = []
Mes = []
Anio = []
    
def ingresoManual(ipc, mes, anio):
    IPC.append(ipc)
    Mes.append(mes)
    Anio.append(anio)
    
def cargaMasiva(ruta):
    os.system('cls')
    archivo = open(ruta,'r') #'w' 
    while True:
        linea = archivo.readline() #writeline
        if not linea:
            break
        else:
            arreglo=linea.split()
            ingresoManual(arreglo[1], arreglo[0], arreglo[2])

