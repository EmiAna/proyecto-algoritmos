def mostrarListas():
	os.system('cls')
	longitud=len(IPC)	
	for i in range(0,longitud):
	#	print ('Lista de datos #'+str(i))
	#	print(IPC[i])
	#	print(Mes[i])
	#	print(Anio[i])
		print "%s\t\t%s\t\t\t%s" %(IPC[i], Mes[i], Anio[i])		

def mostrarListas1():
	os.system('cls')
	longitud=len(IPC)	
	for i in range(0,longitud):
	#	print("\t " + IPC[i] + "\t" + Mes[i] + "\t\t\t" + Anio[i]) 
		print "%s\t\t%s\t\t\t%s" %(IPC[i], Mes[i], Anio[i]) 
    
